{
  "rules": [
    {
      "name": "assignment",
      "expr": "ASSIGNMENT expression expression"
    },
    {
      "name": "expression",
      "expr": "BINARY_OP INTEGER|IDENTIFIER|expression INTEGER|IDENTIFIER|expression"
    }
  ],
  "tokens": [
    {
      "name": "ASSIGNMENT",
      "expr": "="
    },
    {
      "name": "BINARY_OP",
      "expr": "(?:\\+|\\-|\\*|\\/)+"
    },
    {
      "name": "IDENTIFIER",
      "expr": "LETTER+"
    },
    {
      "name": "INTEGER",
      "expr": "DIGIT+"
    },
    {
      "name": "FLOAT",
      "expr": "INTEGER\\.(?:INTEGER)?"
    },
    {
      "name": "DIGIT",
      "expr": "[0-9]"
    },
    {
      "name": "LETTER",
      "expr": "[a-zA-Z]"
    },
    {
      "name": "WHITESPACE",
      "expr": "(?: |\t|\r|\n)+",
      "ignore": true
    }
  ]
}
